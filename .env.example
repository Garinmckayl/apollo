# Elasticsearch Serverless connection
ELASTIC_URL=https://your-deployment.es.us-east-1.aws.elastic.cloud
ELASTIC_API_KEY=your-base64-encoded-api-key

# Kibana connection (for Agent Builder API)
KIBANA_URL=https://your-deployment.kb.us-east-1.aws.elastic.cloud
KIBANA_API_KEY=your-kibana-api-key

# Slack integration (optional -- for incident notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack Bot (optional -- for two-way @mention and DM support via Socket Mode)
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-level-token

# Telegram Bot (optional -- for two-way chat with persistent threads)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# MCP Server
MCP_PORT=3001

# GitHub integration (optional -- for creating real GitHub issues from incidents)
GITHUB_TOKEN=ghp_your-github-personal-access-token
GITHUB_REPO=your-username/your-repo

# Autonomous scan interval in milliseconds (optional -- default: 3 hours)
SCAN_INTERVAL_MS=10800000

# LLM connector ID (configured in Kibana > Stack Management > Connectors)
LLM_CONNECTOR_ID=your-llm-connector-id
